<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="kl_feature_toggle.feature_toggles.class">KukuliliLabs\FeatureToggleBundle\FeatureToggle\FeatureToggleService</parameter>
        <parameter key="kl_feature_toggle.twig.feature_toggle_extension.class">KukuliliLabs\FeatureToggleBundle\Twig\FeatureToggleExtension</parameter>
    </parameters>

    <services>
        <service id="kl_feature_toggle.feature_toggles" class="%kl_feature_toggle.feature_toggles.class%">
            <argument>%kl_feature_toggle.feature_toggles%</argument>
        </service>

        <service id="kl_feature_toggle.twig.feature_toggle_extension" class="%kl_feature_toggle.twig.feature_toggle_extension.class%">
            <tag name="twig.extension" />
            <argument type="service" id="kl_feature_toggle.feature_toggles" on-invalid="null"/>
        </service>
    </services>
</container>
